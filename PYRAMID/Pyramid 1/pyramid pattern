#include<stdio.h>
int main()
{
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < 2 * rows; j++)
        {
            if (j >= rows - i && j <= rows + i)
            {
                printf("*");
            }
            else
            {
                printf("");
            }
        }
        printf("\n");
    }
    return 0;
}
